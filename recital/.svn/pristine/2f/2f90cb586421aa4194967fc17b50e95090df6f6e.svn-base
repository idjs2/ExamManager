<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.AdminNotificationMapper">


	<!-- 페이지 처리 전 리스트 -->
	<!-- <select id="list" resultType="kr.or.ddit.vo.BoardVO"> -->
	<!-- SELECT bo_no, emp_no, bo_title, bo_content, bo_cnt, bo_date, file_group_no -->
	<!-- FROM board -->
	<!-- ORDER BY bo_no DESC -->
	<!-- </select> -->

	<select id="list" parameterType="hashMap"
		resultType="kr.or.ddit.vo.BoardVO">
		SELECT T.*
		FROM (
		SELECT row_number() over(ORDER BY bo_no
		DESC) rnum, bo_no, emp_no, bo_title,
		bo_content, bo_cnt, bo_date,
		file_group_no
		FROM board
		WHERE 1=1
		AND (bo_title LIKE '%' || #{keyword}
		|| '%' OR bo_content LIKE '%' ||
		#{keyword} || '%')
		) T
		WHERE T.rnum
		BETWEEN (#{page} * #{itemsPerPage}) - (#{itemsPerPage} - 1)
		AND
		(#{page} * #{itemsPerPage})
	</select>

	<!-- 페이지 -->
	<select id="getBoardCount" parameterType="hashMap"
		resultType="int">
		SELECT COUNT(*)
		FROM board
		WHERE 1=1
		AND (bo_title LIKE '%' ||
		#{keyword} || '%' OR bo_content LIKE '%' ||
		#{keyword} || '%')
	</select>

	<select id="detail" parameterType="String"
		resultType="kr.or.ddit.vo.BoardVO">
		SELECT bo_no, emp_no, bo_title, bo_content, bo_cnt,
		bo_date, file_group_no
		FROM board
		WHERE bo_no = #{boNo}
	</select>

	<select id="search" parameterType="String"
		resultType="kr.or.ddit.vo.BoardVO">
		SELECT bo_no, emp_no, bo_title, bo_content, bo_cnt,
		bo_date, file_group_no
		FROM board
		WHERE bo_title LIKE '%' || #{keyword}
		|| '%' OR bo_content LIKE '%' ||
		#{keyword} || '%'
	</select>

	<update id="incrementView" parameterType="String">
		UPDATE board
		SET bo_cnt = bo_cnt + 1
		WHERE bo_no = #{boNo}
	</update>

	<!-- 게시글 수정 -->
	<update id="updateBoard" parameterType="kr.or.ddit.vo.BoardVO">
		UPDATE board
		SET bo_title = #{boTitle}, bo_content = #{boContent}
		WHERE bo_no = #{boNo}
	</update>

	<!-- 게시글 삭제 -->
	<delete id="deleteBoard" parameterType="String">
		DELETE FROM board
		WHERE bo_no = #{boNo}
	</delete>


	<!-- 파일 정보 저장 -->
	<insert id="saveFile" parameterType="kr.or.ddit.vo.FileVO">
	    INSERT INTO FILE (FILE_GROUP_NO, FILE_NO, FILE_NAME, FILE_SAVE_NAME, FILE_SIZE, FILE_SAVEPATH)
	    VALUES (#{fileGroupNo}, #{fileNo}, #{fileName}, #{fileSaveName}, #{fileSize}, #{fileSavepath})
	</insert>
	
	


	<!-- 파일 리스트 조회 -->
	<select id="getFileList" parameterType="String"
		resultType="kr.or.ddit.vo.FileVO">
		SELECT FILE_GROUP_NO, FILE_NO, FILE_NAME, FILE_SAVE_NAME, FILE_SIZE,
		FILE_SAVEPATH
		FROM FILE
		WHERE FILE_GROUP_NO = #{fileGroupNo}
	</select>
	
	
	<!--  새 글 등록 -->
	<insert id="insertBoard" parameterType="kr.or.ddit.vo.BoardVO">
	    INSERT INTO board (bo_no, emp_no, bo_title, bo_content, bo_date, bo_cnt, file_group_no)
	    VALUES (#{boNo}, #{empNo}, #{boTitle}, #{boContent}, #{boDate}, #{boCnt}, #{fileGroupNo})
	</insert>
	





</mapper>