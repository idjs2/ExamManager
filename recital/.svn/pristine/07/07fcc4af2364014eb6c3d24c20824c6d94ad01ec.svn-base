<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mapper.IStuScholarshipMapper">

	<!-- 장학 종류 조회 -->
	<select id="scholarshipList" resultType="scholarshipVO">
		select 
				sch_no
			  , sch_name
			  , sch_content
			  , sch_req
			  , sch_amount
			  , sch_type
			  , sch_max
			from scholarship
	</select>

	<!-- 장학 종류 상세보기 -->
	<select id="scholarshipDetail" parameterType="String" resultType="scholarshipVO">
		select 
				sch_no
				, sch_name
				, sch_content
				, sch_req
				, sch_amount
				, sch_type
				, sch_max
		 from scholarship
		where sch_no = #{schNo}
	</select>
	
	<!-- 선차감 목록 조회 -->
	<select id="preScholarshipList" resultType="scholarshipVO">
		select 
				sch_no
				, sch_name
				, sch_content
				, sch_req
				, sch_amount
				, sch_type
				, sch_max
		from scholarship
	   where sch_type= '선차감'
	</select>
	
	<!-- 후지급 목록 조회 -->
	<select id="postScholarshipList" resultType="scholarshipVO">
		select 
				sch_no
				, sch_name
				, sch_content
				, sch_req
				, sch_amount
				, sch_type
				, sch_max
		from scholarship
	   where sch_type= '후지급'
	</select>

	<!-- 내가 수혜받은 장학 내역 조회  -->
	<select id="myScholarshipList" parameterType="String" resultType="scholarshipVO">
		select
    			s.sch_name
    			,s.sch_amount
    			, to_char(sr.sch_apl_date, 'YYYY/MM/DD') as sch_apl_date
    			,sr.year
    			,sr.semester
    			,sr.rej_content
    			,s.sch_type
    			,s.sch_content
    			,s.sch_req
    			,sr.com_det_c_no
    			,to_char(sr.sch_rec_date, 'YYYY/MM/DD') as sch_rec_date 
		from 
    			scholarship s
		join 
   				scholarship_receive sr on s.sch_no = sr.sch_no
		where 
    			sr.stu_no = #{stuNo}
	 order by 
    			sr.sch_apl_date asc
	</select>	
	
	<!-- 승인 내역 조회 -->
    <select id="approvedList" parameterType="String" resultType="scholarshipVO">
        select
                s.sch_name
                ,s.sch_amount
                , to_char(sr.sch_apl_date, 'YYYY/MM/DD') as sch_apl_date
                ,sr.year
                ,sr.semester
                ,sr.rej_content
                ,s.sch_type
                ,s.sch_content
                ,s.sch_req
                , to_char(sr.sch_rec_date, 'YYYY/MM/DD') as sch_rec_date 
                ,sr.com_det_c_no
        from 
                scholarship s
        join 
                scholarship_receive sr on s.sch_no = sr.sch_no
        where 
                sr.stu_no = #{stuNo}
          and   sr.com_det_c_no = 'C0201'    
     order by 
                sr.sch_apl_date asc
    </select>
	
	<!-- 미승인 내역 조회 -->
	<select id="unApprovedList" parameterType="String" resultType="scholarshipVO">
		select
    			s.sch_name
    			,s.sch_amount
    			, to_char(sr.sch_apl_date, 'YYYY/MM/DD') as sch_apl_date
    			,sr.year
    			,sr.semester
    			,sr.rej_content
    			,s.sch_type
    			,s.sch_content
    			,s.sch_req
    			,sr.com_det_c_no
    			,to_char(sr.sch_rec_date, 'YYYY/MM/DD') as sch_rec_date 
		from 
    			scholarship s
		join 
   				scholarship_receive sr on s.sch_no = sr.sch_no
		where 
    			sr.stu_no = #{stuNo}
    	  and	sr.com_det_c_no = 'C0202'	
	 order by 
    			sr.sch_apl_date asc
	</select>
	
	<!-- 반려 내역 조회 -->
	<select id="rejectedList" parameterType="String" resultType="scholarshipVO">
		select
    			s.sch_name
    			,s.sch_amount
    			, to_char(sr.sch_apl_date, 'YYYY/MM/DD') as sch_apl_date
    			,sr.year
    			,sr.semester
    			,sr.rej_content
    			,s.sch_type
    			,s.sch_content
    			,s.sch_req
    			,sr.com_det_c_no
    			,to_char(sr.sch_rec_date, 'YYYY/MM/DD') as sch_rec_date 
		from 
    			scholarship s
		join 
   				scholarship_receive sr on s.sch_no = sr.sch_no
		where 
    			sr.stu_no = #{stuNo}
    	  and	sr.com_det_c_no = 'C0203'	
	 order by 
    			sr.sch_apl_date asc
	</select>
	
	<!-- 장학금 신청 -->
	<insert id="insertScholarshipRequest" parameterType="scholarshipVO">
		insert into scholarship_receive (
         		sch_rec_no
		        , sch_no
		        , stu_no
		        , sch_rec_date
		        , sch_apl_date
		        , year
		        , semester
		        , com_det_c_no
		        , rej_content
		) values (
		         seq_scholarship_receive.nextval
		        , #{schNo}
		        , #{stuNo}
		        , null
		        , to_char(sysdate, 'YYYY/MM/DD')
		        , #{year}
		        , #{semester}
		        , 'C0202'
		        , null
		)
	</insert>
	
	<!-- 장학금 번호로 장학금명 select -->
	<select id="getScholarshipByNo" parameterType="String" resultType="scholarshipVO">
		select sch_name
		  from scholarship
 		 where sch_no = #{schNo} 
	</select>
	
</mapper>


























