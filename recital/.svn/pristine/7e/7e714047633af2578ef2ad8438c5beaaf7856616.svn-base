<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="py-3 mb-4">시설예약</h4>
	<div class="row">
		
		<div class="col-xl-12">			
					<!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">시설목록</h5>
                <hr class="my-0">
                <div class="table-responsive text-nowrap">
               		<div class="row">
	               		<div class="col-md-3">
		               		<form id="searchForm" action="/student/facMain">	
		               			<select class="form-select float-right" name="facTypeNo" id="selectBox">
		               				<option>전체</option>
		               				<option value="1" <c:if test="${facType eq '1' }">selected='selected'</c:if>>강의실</option>
		               				<option value="2" <c:if test="${facType eq '2' }">selected='selected'</c:if>>회의실</option>
		               				<option value="3" <c:if test="${facType eq '3' }">selected='selected'</c:if>>운동시설</option>
		               			</select>
		               		</form>
	               		</div>
               		</div>
	                    
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>시설분류</th>       
                        <th>건물명</th>			
                        <th>시설명</th>			
                        <th>최대수용인원</th>			                        
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <c:forEach items="${facList }" var="fac">
                      	
	                      <tr>
	                        <td>
		                      	
		                      	<input type="hidden" value="${fac.facNo }" name="facNo">                    	

	                       		<i class="fab fa-angular fa-lg text-danger me-3"></i> 
	                        	<strong>
	                        		<c:if test="${fac.facTypeNo eq '1' }">강의실</c:if>
	                        		<c:if test="${fac.facTypeNo eq '2' }">회의실</c:if>
	                        		<c:if test="${fac.facTypeNo eq '3' }">운동시설</c:if>
	                        	</strong>
	                        </td>	                        
	                        <td>${fac.buiNo }</td>
	                        <td>${fac.facName }</td>
	                        <td>${fac.facMax }</td>                        
	                      </tr>
	                     
                      </c:forEach>
                    </tbody>
                   </table>
                </div>
              </div>
			</div>
		</div>
	</div>		
<script>
$(function(){
	var searchForm = $("#searchForm");
	var selectBox = $("#selectBox");
	
	// 셀렉트박스가 선택될대마다 form전송 이벤트
	selectBox.on("change", function(){
		console.log("바뀝니다!");
		searchForm.submit();
	});
	
	$("tr").click(function(){
		var facNo = $(this).find("td").find("input").val();
		location.href="/student/facDetail?facNo="+facNo;
	})
	
});
</script>